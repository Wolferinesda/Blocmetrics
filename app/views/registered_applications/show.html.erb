<h1><%= @registered_app.name %></h1>

<div class="row">
	<div class="col-md-8">
		<h4>URL: <%= link_to @registered_app.url, "http://#{@registered_app.url}" %></h4>
		<p>Added by <%= @registered_app.user.email %></p>
	</div>
	<div class="col-md-4">
		<%= link_to "Edit", edit_registeredapp_path, class: 'btn btn-success' %>
		<%= link_to "Delete", [@registered_app], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this app from Blocmetrics?'} %>
	</div>
</div>
